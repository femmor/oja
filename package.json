{
  "name": "oja-ecommerce",
  "version": "1.0.0",
  "description": "Oja Ecommerce project",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "type": "module",
  "workspaces": [
    "admin",
    "backend"
  ],
  "scripts": {
    "dev": "bun run build:admin && NODE_ENV=development bun start",
    "install:all": "bun install",
    "install:admin": "bun install --cwd admin",
    "install:backend": "bun install --cwd backend",
    "dev:admin": "bun run --cwd admin dev --watch",
    "dev:backend": "bun run --cwd backend dev",
    "build:admin": "bun run --cwd admin build",
    "build:backend": "bun run --cwd backend build",
    "build": "bun run build:admin && bun run build:backend",
    "start:prod": "NODE_ENV=production bun run --cwd backend start:prod",
    "start": "bun run --cwd backend start",
    "lint:admin": "bun run --cwd admin lint",
    "clean": "rm -rf node_modules && rm -rf admin/node_modules && rm -rf backend/node_modules && rm -rf mobile/node_modules"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/femmor/oja.git"
  },
  "keywords": [],
  "author": "Emmanuel Egomson",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/femmor/oja/issues"
  },
  "homepage": "https://github.com/femmor/oja#readme",
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5"
  }
}
